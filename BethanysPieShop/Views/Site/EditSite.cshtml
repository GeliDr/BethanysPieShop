@model AddSiteViewModel

<form method="post">

    <input type="hidden" asp-for="Site.SiteId" />
    <div class="container">
        <div class="row">
            <div class="col-lg-2 col-md-2">
                <label asp-for="Site.SiteName"></label>
            </div>
            <div class="col-lg-10 col-md-10">
                <input type="text" asp-for="Site.SiteName" />
            </div>
        </div>

        <div class="row">
            <div class="col-lg-2 col-md-2">
                <label asp-for="Site.LocationDesc"></label>
            </div>
            <div class="col-lg-10 col-md-10">
                <input type="text" asp-for="Site.LocationDesc" />
                <span asp-validation-for="Site.LocationDesc" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-2 col-md-2">
                <label asp-for="Site.PropertyTypeId"></label>
            </div>
            <div class="col-lg-10 col-md-10">
                <select asp-for="Site.PropertyTypeId" asp-items="@(new SelectList(Model.SystemCodes,"SystemCodeId","Value" ))"></select>
            </div>
        </div>


        <div>
            <div class="col-lg-12 col-md-12">
                <button type="submit" asp-controller="Site" asp-action="Index">Cancel</button>
                <button type="submit">Save</button>
            </div>
        </div>
    </div>

</form>